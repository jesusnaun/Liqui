@model IEnumerable<Liqui.Web.Data.Entities.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h2>USUARIOS</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
               Local
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local.Name)
            </td>

            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Modificar</a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detalles</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
